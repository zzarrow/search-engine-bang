<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Bang Search Engine</display-name>
    <description>
    Web application for the Bang search engine.
    </description>

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>zzarrow@seas.upenn.edu</param-value>
      <description>
        The EMAIL address of the administrator to whom questions
        and comments about this application should be addressed.
      </description>
    </context-param>

    <servlet>
      <servlet-name>bang</servlet-name>
      <description>
       	The main Bang servlet.
      </description>
      <servlet-class>edu.upenn.cis.bang.servlets.Main</servlet-class>
      <!-- Load this servlet at server startup time -->
      <load-on-startup/>
    </servlet>

    <servlet-mapping>
      <servlet-name>bang</servlet-name>
      <url-pattern>/bang</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>

</web-app>
